<UserControl x:Class="NASA_Pump_Control.Issue_face"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NASA_Pump_Control"
             mc:Ignorable="d" d:DesignWidth="300" Height="200">
    <Grid Background="#FFB0B0B0" Margin="0,0,0,10">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Issue" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_detials" HorizontalAlignment="Left" Height="116" Margin="10,47,0,0" VerticalAlignment="Top" Width="280" Text="Issue Detials">
            
        </TextBox>
        <TextBox x:Name="txt_name" HorizontalAlignment="Left" Height="18" Margin="10,29,0,0" TextWrapping="Wrap" Text="Issue Name" VerticalAlignment="Top" Width="280"/>
        <Button x:Name="btn_issue_submit" Content="Submit" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" Width="280" Click="btn_issue_submit_Click"/>

    </Grid>
</UserControl>
